<!doctype html>
<html lang="en">

    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
            integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <title>Hello, world!</title>
    </head>

    <body>
        <main class="container" style="margin-top:90px">
            <form id="form1" action="/home" method="POST">
                <h3>Organ</h3>
                <div class="form-group row">
                    <label for="hospital" class="col-sm-2 col-form-label">Hospital</label>
                    <div class="col-sm-10">
                        <input name="hName" type="text" class="form-control" id="hospital" placeholder="Enter here"
                            required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="organId" class="col-sm-2 col-form-label">Organ ID</label>
                    <div class="col-sm-10">
                        <input name="organId" type="text" class="form-control" id="hospital" placeholder="Enter here"
                            required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="stateHospital" class="col-sm-2 col-form-label">State</label>
                    <div class="col-sm-10">
                        <select name="hState" class="form-control">
                            <option>Andaman and Nicobar Islands</option>
                            <option>DelhiAndhra Pradesh</option>
                            <option>Arunachal Pradesh</option>
                            <option>Assam</option>
                            <option>Bihar</option>
                            <option>Chandigarh</option>
                            <option>Chhattisgarh</option>
                            <option>Dadra and Nagar Haveli</option>
                            <option>Daman and Diu</option>
                            <option>Delhi</option>
                            <option>Goa</option>
                            <option>Gujarat</option>
                            <option>Haryana</option>
                            <option>Himachal Pradesh</option>
                            <option>Jammu and Kashmir</option>
                            <option>Jharkhand</option>
                            <option>Karnataka</option>
                            <option>Kerala</option>
                            <option>Lakshadweep</option>
                            <option>Madhya Pradesh</option>
                            <option>Maharashtra</option>
                            <option>Manipur</option>
                            <option>Meghalaya</option>
                            <option>Mizoram</option>
                            <option>Nagaland</option>
                            <option>Odisha</option>
                            <option>Puducherry</option>
                            <option>Punjab</option>
                            <option>Rajasthan</option>
                            <option>Sikkim</option>
                            <option>Tamil Nadu</option>
                            <option>Telangana</option>
                            <option>Tripura</option>
                            <option>Uttar Pradesh</option>
                            <option>Uttarakhand</option>
                            <option>West Bengal</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="addressHospital" class="col-sm-2 col-form-label">Address</label>
                    <div class="col-sm-10">
                        <textarea name="hAddress" class="form-control" id="addressHospital" rows="2" placeholder="Enter here"
                            required></textarea>
                    </div>
                </div>


                <fieldset class="form-group">
                    <div class="row">
                        <legend class="col-form-label col-sm-2 pt-0">Organ Donated</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gridRadios" id="kidney" value="1"
                                    checked>
                                <label class="form-check-label" for="kidney">
                                    Kidney
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gridRadios" id="liver" value="2">
                                <label class="form-check-label" for="liver">
                                    Liver
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gridRadios" id="lung" value="3">
                                <label class="form-check-label" for="lung">
                                    Lung
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gridRadios" id="heart" value="4">
                                <label class="form-check-label" for="heart">
                                    Heart
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gridRadios" id="pancreas" value="5">
                                <label class="form-check-label" for="pancreas">
                                    Pancreas
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gridRadios" id="intestine" value="6">
                                <label class="form-check-label" for="intestine">
                                    Intestine
                                </label>
                            </div>
                        </div>
                    </div>
                </fieldset>

                <div class="form-group row">
                    <label for="donationDate" class="col-sm-2 col-form-label">Date Of Donation</label>
                    <div class="col-sm-10">
                        <input name="date" type="date" class="form-control" id="donationDate" max="2018-04-08" min="2018-04-06"
                            required>
                        <small class="form-text text-muted">Enter date between 2018-04-08 and 2018-04-06.</small>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="donationTime" class="col-sm-2 col-form-label">Time Of Donation</label>
                    <div class="col-sm-10">
                        <input name="time" type="time" class="form-control" id="donationTime" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="sol" class="col-sm-2 col-form-label">Storing Solution</label>
                    <div class="col-sm-10">
                        <input name="storingSolution" type="text" class="form-control" id="sol" placeholder="Enter here"
                            required>
                        <small id="solHelp" class="form-text text-muted">e.g. ViaSpan (University of Wisconsin)
                            Solution,
                            Eurocollins Solution, Custodial Solution and others.</small>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="temp" class="col-sm-2 col-form-label">Temperature</label>
                    <div class="col-sm-10">
                        <input name="temperature" type="number" class="form-control" id="sol" placeholder="Enter here"
                            required>
                        <small id="tempHelp" class="form-text text-muted">Enter the temperature in degree celsius.</small>
                    </div>
                </div>

                <h3>Donor</h3>

                <div class="form-group row">
                    <label for="fName" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="donorName" class="form-control" id="fName" placeholder="Enter here"
                            required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="DonorId" class="col-sm-2 col-form-label">Donor ID</label>
                    <div class="col-sm-10">
                        <input name="donorId" type="text" class="form-control" id="hospital" placeholder="Enter here"
                            required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="dob" class="col-sm-2 col-form-label">DOB</label>
                    <div class="col-sm-10">
                        <input name="dob" type="date" class="form-control" id="dob" max="2018-04-08" min="1918-04-08"
                            required>
                    </div>
                </div>

                <fieldset class="form-group">
                    <div class="row">
                        <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="female" value="female"
                                    checked>
                                <label class="form-check-label" for="female">
                                    Female
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="male" value="male">
                                <label class="form-check-label" for="male">
                                    Male
                                </label>
                            </div>
                        </div>
                    </div>
                </fieldset>

                <div class="form-group row">
                    <label for="bloodGroup" class="col-sm-2 col-form-label">Blood Group</label>
                    <div class="col-sm-10">
                        <select name="bloodGroup" class="form-control">
                            <option>A+</option>
                            <option>A-</option>
                            <option>B+</option>
                            <option>B-</option>
                            <option>O+</option>
                            <option>O-</option>
                            <option>AB+</option>
                            <option>AB-</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="state" class="col-sm-2 col-form-label">State</label>
                    <div class="col-sm-10">
                        <select name="donorState" class="form-control">
                            <option>Andaman and Nicobar Islands</option>
                            <option>DelhiAndhra Pradesh</option>
                            <option>Arunachal Pradesh</option>
                            <option>Assam</option>
                            <option>Bihar</option>
                            <option>Chandigarh</option>
                            <option>Chhattisgarh</option>
                            <option>Dadra and Nagar Haveli</option>
                            <option>Daman and Diu</option>
                            <option>Delhi</option>
                            <option>Goa</option>
                            <option>Gujarat</option>
                            <option>Haryana</option>
                            <option>Himachal Pradesh</option>
                            <option>Jammu and Kashmir</option>
                            <option>Jharkhand</option>
                            <option>Karnataka</option>
                            <option>Kerala</option>
                            <option>Lakshadweep</option>
                            <option>Madhya Pradesh</option>
                            <option>Maharashtra</option>
                            <option>Manipur</option>
                            <option>Meghalaya</option>
                            <option>Mizoram</option>
                            <option>Nagaland</option>
                            <option>Odisha</option>
                            <option>Puducherry</option>
                            <option>Punjab</option>
                            <option>Rajasthan</option>
                            <option>Sikkim</option>
                            <option>Tamil Nadu</option>
                            <option>Telangana</option>
                            <option>Tripura</option>
                            <option>Uttar Pradesh</option>
                            <option>Uttarakhand</option>
                            <option>West Bengal</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="address" class="col-sm-2 col-form-label">Address</label>
                    <div class="col-sm-10">
                        <textarea name="donorAddress" class="form-control" id="address" rows="2" placeholder="Enter here"
                            required></textarea>
                    </div>
                </div>


                <div class="form-group row">
                    <label for="aadhar" class="col-sm-2 col-form-label">Aadhar Number</label>
                    <div class="col-sm-10">
                        <input name="donorAadhar" type="text" pattern="[0-9]{12}" class="form-control" id="pinCode"
                            placeholder="Enter here" required>
                        <small class="form-text text-muted">Enter the 12 digit aadhar number.</small>
                    </div>
                </div>


                <h3>Next Of Kin</h3>

                <div class="form-group row">
                    <label for="fNameKin" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="kinName" class="form-control" id="fNameKin" placeholder="Enter here"
                            required>
                    </div>
                </div>


                <div class="form-group row">
                    <label for="phoneKin" class="col-sm-2 col-form-label">Phone</label>
                    <div class="col-sm-10">
                        <input type="text" name="kinPhoneNo" class="form-control" pattern="[789][0-9]{9}" id="phoneKin"
                            placeholder="Enter here" required>
                        <small class="form-text text-muted">Enter the 10 digit phone number beginning with 7, 8 or 9.</small>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="aadhar" class="col-sm-2 col-form-label">Aadhar Number</label>
                    <div class="col-sm-10">
                        <input name="kinAadhar" type="text" pattern="[0-9]{12}" class="form-control" id="pinCode"
                            placeholder="Enter here" required>
                        <small class="form-text text-muted">Enter the 12 digit aadhar number.</small>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
            
        </main>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
            crossorigin="anonymous"></script>
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
        
        <script src="js/web3.min.js"></script>
        <script src="js/frontApp.js"></script>

    </body>

</html>